{% if app.user %}
  <ul id="UserHolder" class="navbar-nav d-md-flex d-none">
    <div class="linked-user-nav-blocks d-inline-flex">
      <li class="nav-item">
        <div id="userMenuBars">
          <i class="fas fa-bars text-dark"></i>
        </div>
      </li>
      <li id="NavUser" class="nav-item">
        <h5 id="Name" class="no-margin">{{app.user.fullname}}</h5>
        <p id="Email" class="d-inline no-margin">{{app.user.email}}</p>
      </li>
    </div>
    <div id="UserMenuDropdown" class="custom-dropdown d-none small-top-margin p-3">
      <a href="/editor">
        <div class="option-item row mx-0 mb-2 justify-content-center">
          <button class="btn col-12" style="border: 4px dashed var(--control-button);color: var(--control-button);">
            <i class="fas fa-plus"></i>
            {% trans %}Start_new_presentation{% endtrans %}
          </button>
        </div>
      </a>
      <a href="/account">
        <div class="option-item row mx-0 mb-2">
          <button class="btn col-12 text-left">
            <i class="fas fa-photo-video"></i>
            {% trans %}My_presentations{% endtrans %}
          </button>
        </div>
      </a>
      <a href="/account?tab=ProfileLink">
        <div class="option-item row mx-0 mb-2">
          <button class="btn col-12 text-left">
            <i class="fas fa-user"></i>
            {% trans %}My_Account{% endtrans %}
          </button>
        </div>
      </a>
      <a href="/logout">
        <div class="option-item row mx-0 mb-2">
          <button class="btn col-12 text-danger text-left">
            {% trans %}Logout{% endtrans %}
          </button>
        </div>
      </a>
    </div>
  </ul>
{% else %}
  <ul class="col-2 mt-auto mb-auto p-0 mr-4">
    <a href="{{path('app_login')}}">
      <button class="btn mt-auto mb-auto btn-info bevel-btn">
        {% trans %}Login{% endtrans %}
      </button>
    </a>
    <!--   <a href="{{path('app_register')}}">
                              <button class="btn mt-auto mb-auto btn-info bevel-btn">
                                {% trans %}Sign up{% endtrans %}
                              </button>
                            </a> -->
  </ul>
{% endif %}
