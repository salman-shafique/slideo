{% extends 'base.html.twig' %}

{% block title %}
  {% trans %}Editor{% endtrans %}
{% endblock %}


{% block style %}
  {{parent()}}
  {{ encore_entry_link_tags('editor') }}
{% endblock %}
{% block body %}

  <div class="row justify-content-center col-12">
    <h1 class="col-12 text-center">Sample steps</h1>
    <div class="col-8">
      <div class="form-group m-0">
        <input id="slideTitle" type="text" class="form-control data-hj-whitelist" placeholder="Slide title">
      </div>
      <div class="form-group">
        <div class="border p-1 inline-editor" style="width: 100%;background-color:rgb(241, 241, 241);">
          <i class="fas fa-align-left border p-2" id="entry_to_ltr" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="LTR"></i>
          <i class="fas fa-align-right border p-2" id="entry_to_rtl" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="RTL"></i>
          <i class="fas fa-remove-format border p-2" id="entry_remove_format" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="הסר את הפורמט"></i>
          <i class="fas fa-eraser border p-2" id="entry_clear_content" style="cursor:pointer" data-toggle="tooltip" data-placement="top" title="תוכן ברור"></i>
        </div>
        <div id="area" class="col-12 border pt-2" style="height: 300px;overflow-y: scroll;" contenteditable autofocus></div>
      </div>
      <div class="text-center">
        <button class="btn btn-info" id="entry_analyze" style="margin-top: 10px;padding: 10px 30px;" style="cursor:pointer">
          <span style="font-size:34px;">עצבו את הטקסט שלי</span>
        </button>
      </div>
    </div>
    <div id="entry_result" class="col-8">
      Result
    </div>
  </div>


  <pre>
{{ dump(presentation) }}
	</pre>

{% endblock %}

{% block script %}
  {{parent()}}
  {{ encore_entry_script_tags('editor') }}
{% endblock %}
