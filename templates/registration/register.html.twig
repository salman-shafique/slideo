{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}
{% block style %}
  {{parent()}}
  <style>
    ul li {
      color: white;
    }
  </style>
{% endblock %}

{% block body %}

  <footer class="footer mt-0">
    <div class="footer_top py-5 px-0 mt-0">
      <div class="container py-5">
        <div class="row justify-content-center gallery-item">
          <div class="col-12 p-5">

            <p style="text-align:center">
              <img src="/img/logo.png" alt="/img/logo.png" style="max-width:100px">
            </p>
            <h1 class="text-center text-white">Register</h1>
            <h6 class="text-center text-white">or <a href="/login">Log in</a></h6>

          </div>
          {% for error in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ error }}</div>
            <div class="col-12"></div>
          {% endfor %}
          {% for success in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ success }}</div>
            <div class="col-12"></div>
          {% endfor %}


          {{ form_start(registrationForm, {'attr': {'class': 'col-5'}}) }}
          {{ form_row(registrationForm.fullname, {'attr': {'class': 'form-control mb-1'}})}}
          {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-1'}})}}
          {{ form_row(registrationForm.plainPassword, {label: 'Password','attr': {'class': 'form-control mb-1'} }) }}
          <button type="submit" class="btn btn-primary">Register</button>
          {{ form_end(registrationForm) }}


        </div>
      </div>
    </div>
  </footer>
{% endblock %}
